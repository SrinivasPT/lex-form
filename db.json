        {
            "id": "EMP_001",
            "code": "EMP_001",
            "version": "1.0.0",
            "label": "New Employee Registration",
            "sections": [
                {
                    "label": "Basic Information",
                    "width": [12],
                    "controls": [
                        {
                            "code": "employee.firstName",
                            "width": [6]
                        },
                        {
                            "code": "employee.lastName",
                            "label": "Surname (Overridden Label)",
                            "width": [6]
                        },
                        {
                            "code": "employee.hasNickName",
                            "width": 6
                        },
                        {
                            "code": "nickName",
                            "key": "nickName",
                            "type": "text",
                            "label": "Nickname",
                            "visibleWhen": "model.hasNickName == true",
                            "validators": { "required": true },
                            "width": [12, 8, 6]
                        }
                    ]
                },
                {
                    "label": "Mailing Address",
                    "key": "address",
                    "width": [6],
                    "controls": [
                        {
                            "code": "address.street",
                            "width": 12
                        },
                        {
                            "code": "address.city",
                            "width": [12, 12]
                        },
                        {
                            "code": "address.countryCode",
                            "width": [12, 6]
                        },
                        {
                            "code": "address.stateCode",
                            "width": [12, 6]
                        }
                    ]
                },
                {
                    "label": "Dependents",
                    "width": [12],
                    "controls": [
                        {
                            "key": "dependents",
                            "type": "table",
                            "label": "Dependents List",
                            "width": [8],
                            "searchable": true,
                            "sortable": true,
                            "pagination": {
                                "enabled": true,
                                "pageSize": 5
                            },
                            "controls": [
                                {
                                    "key": "name",
                                    "type": "text",
                                    "label": "Name",
                                    "width": [4]
                                },
                                {
                                    "key": "relation",
                                    "type": "select",
                                    "label": "Relation",
                                    "width": [4],
                                    "options": [
                                        { "label": "Spouse", "value": "spouse" },
                                        { "label": "Child", "value": "child" },
                                        { "label": "Parent", "value": "parent" }
                                    ]
                                },
                                {
                                    "key": "age",
                                    "type": "number",
                                    "label": "Age",
                                    "width": [2]
                                }
                            ],
                            "rowActions": [
                                {
                                    "id": "delete",
                                    "label": "Delete",
                                    "icon": "fa fa-trash",
                                    "cssClass": "btn-danger"
                                }
                            ]
                        }
                    ]
                }
